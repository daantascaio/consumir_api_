{
  // VS Code
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.colorTheme": "Theme Flat",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,

  "editor.fontFamily": "'Fira Code', Consolas, 'Dank Mono', 'Source Code Pro', 'Fira Code', Menlo, 'Inconsolata', 'Droid Sans Mono', 'DejaVu Sans Mono', 'Ubuntu Mono', 'Courier New', Courier, Monaco, monospace",
  "editor.tabSize": 4,
  "editor.formatOnSave": false,
  "editor.fontLigatures": false,
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [
      120,
      120,
  ],
  "editor.minimap.enabled": false,
  //"editor.fontSize": 13,

  "debug.console.fontSize": 13,
  "toggleFileEventLogging": true,
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": true,
  "git.enableSmartCommit": true,
  "window.zoomLevel": -1,
  "diffEditor.ignoreTrimWhitespace": false,
  "material-icon-theme.hidesExplorerArrows": true,

  // Auto fix on save
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll": true
  },

  // Terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.shell.linux": "zsh",
  "terminal.integrated.fontFamily": "",
  //"terminal.integrated.fontSize": 14,

  // Javascript & TypeScript
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",

  "emmet.syntaxProfiles": {
      "javascript": "jsx"
  },

  "emmet.includeLanguages": {
      "django-html": "html",
      "javascript": "javascriptreact"
  },
  "[javascript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // Python
  "python.linting.pylintArgs": [
      "--load-plugins=pylint_django",
      "--errors-only",
  ],
  "[python]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.pythonPath": "/bin/python3.11",
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.testing.unittestEnabled": true,

  // Django
  "files.associations": {
      "*.html": "html",
      "**/templates/*.html": "django-html",
      "**/templates/*": "django-txt",
      "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },

  // AutoDocstring extension
  "autoDocstring.docstringFormat": "google",

  // BracketPairColorizer extension
  "bracketPairColorizer.showBracketsInGutter": true,

  // Code runner extension
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    // Path where the Code runner execution a python.exe
      "python": "C:\\Users\\caio.dantas\\Desktop\\consumir_api_\\env\\Scripts\\python.exe"
},
//"python.formatting.provider": "none",
}